@model IEnumerable<MuseoMineralogia.Models.TipoBiglietto>
@{
    ViewData["Title"] = "Biglietteria";
}

<div class="container mt-4">
    <h1>Biglietteria Museo Mineralogia</h1>
    <p class="lead">Scegli i biglietti per la tua visita al museo</p>

    <div class="row">
        @foreach (var biglietto in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@biglietto.Nome</h5>
                        <p class="card-text">
                            <span class="badge bg-primary rounded-pill">€@biglietto.Prezzo.ToString("F2")</span>
                        </p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <a asp-action="Dettaglio" asp-route-id="@biglietto.TipoBigliettoId"
                               class="btn btn-outline-secondary">Dettagli</a>
                            <a asp-action="Acquista" asp-route-id="@biglietto.TipoBigliettoId"
                               class="btn btn-primary">Acquista</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
