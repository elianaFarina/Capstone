@{
    ViewData["Title"] = "Pagamento Annullato";
}

<div class="container mt-4">
    <div class="card shadow border-warning">
        <div class="card-header bg-warning text-dark">
            <h3><i class="bi bi-exclamation-triangle me-2"></i>Pagamento Annullato</h3>
        </div>
        <div class="card-body">
            <div class="text-center mb-4">
                <div class="display-1 text-warning">
                    <i class="bi bi-x-circle"></i>
                </div>
                <h2>Il processo di pagamento è stato annullato</h2>
                <p class="lead">Nessun addebito è stato effettuato sul tuo conto.</p>
            </div>

            <div class="alert alert-light border">
                <p class="mb-0">Puoi riprovare l'acquisto quando vuoi o scegliere un diverso tipo di biglietto.</p>
            </div>

            <div class="mt-4 text-center">
                <a asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-arrow-left me-2"></i>Torna alla Biglietteria
                </a>
            </div>
        </div>
    </div>
</div>
